
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CarParkSample.Models.VM.RecordDTO

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>


<div class="card">
    <div class="card-header">
        <h3 class="card-title">Otopark Kayıt Düzenleme Formu</h3>
    </div>
    <form action="/RecordSelected/Edit" method="post">
        <div class="card-body">
            <div class="form-row">
                <div class="form-group col-lg-6">
                    @Html.LabelFor(q => q.ParkAdi, "Park Adı")
                    @Html.TextBoxFor(q => q.ParkAdi, new { @class = "form-control form-control-border border-width-2", @placeholder = "Park Adı Giriniz", @id = "parkadı" })

                </div>

                <div class="form-group col-lg-6">
                    @Html.LabelFor(q => q.ParkTipi, "Park Tipi")
                    <select class="form-control form-control-border border-width-2" name="ParkTipi" data-placeholder="Park Tipi Seçiniz" style="width: 100%;">

                        @if (Model != null)
                        {
                            List<string> selected = new List<string>();

                            <option selected value="@Model.ParkTipi">@Model.ParkTipi</option>

                            selected.Add(Model.ParkTipi);

                            @foreach (var item in Model.ParkTipiDTOs)
                            {

                                if (!selected.Contains(item.ParkTipiAd))
                                {
                                    <option value="@item.ParkTipiAd">@item.ParkTipiAd</option>

                                }

                            }
                        }

                    </select>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-lg-6">
                    @Html.LabelFor(q => q.Bolge, "Bölge")
                    <select class="form-control form-control-border border-width-2" name="Bolge" data-placeholder="Bölge Seçiniz" style="width: 100%;">

                        @if (Model != null)
                        {
                            List<string> selected = new List<string>();

                            <option selected value="@Model.Bolge">@Model.Bolge</option>

                            selected.Add(Model.Bolge);

                            if (!selected.Contains(Model.Bolge))
                            {
                                <option value="3">Anadolu</option>
                                <option value="4">Avrupa</option>
                            }
                        }

                    </select>
                </div>

                <div class="form-group col-lg-6">
                    @Html.LabelFor(q => q.AltBolge, "Alt Bölge")
                    <select class="form-control form-control-border border-width-2" name="Altbolge" data-placeholder="Alt Bölge Seçiniz" style="width: 100%;">

                        @if (Model != null)
                        {
                            List<string> selected = new List<string>();

                            <option selected value="@Model.AltBolge">@Model.AltBolge</option>

                            selected.Add(Model.AltBolge);


                            @foreach (var item in Model.AltBolgeDTOs)
                            {

                                if (!selected.Contains(item.AltBolgeAd))
                                {
                                    <option value="@item.AltBolgeAd">@item.AltBolgeAd</option>
                                }
                            }
                        }

                    </select>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-lg-6">
                    @Html.LabelFor(q => q.Ilce, "İlçe")
                    <select class="form-control form-control-border border-width-2" name="Ilce" data-placeholder="İlçe Seçiniz" style="width: 100%;">

                        @if (Model != null)
                        {
                            List<string> selected = new List<string>();

                            <option selected value="@Model.Ilce">@Model.Ilce</option>

                            selected.Add(Model.Ilce);


                            @foreach (var item in Model.IlceDTOs)
                            {
                                if (!selected.Contains(item.IlceAd))
                                {
                                    <option value="@item.IlceAd">@item.IlceAd</option>
                                }

                            }

                        }

                    </select>
                </div>

                <div class="form-group col-lg-6">
                    @Html.LabelFor(q => q.LokasyonAdi, "Lokasyon")
                    @Html.TextBoxFor(q => q.LokasyonAdi, new { @class = "form-control form-control-border border-width-2", @placeholder = "Lokasyon Giriniz", @id = "lokasyon" })
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-lg-12">
                    @Html.LabelFor(q => q.Adres, "Adres")
                    @Html.TextBoxFor(q => q.Adres, new { @class = "form-control form-control-border border-width-2", @placeholder = "Adres Giriniz", @id = "Adres" })
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-lg-6">
                    @Html.LabelFor(q => q.ParkKapasitesi, "Park Kapasitesi")
                    @Html.TextBoxFor(q => q.ParkKapasitesi, new { @class = "form-control form-control-border border-width-2", @placeholder = "Park Kapasitesi Giriniz", @id = "parkkapasitesi" })
                </div>

                <div class="form-group col-lg-6">
                    @Html.LabelFor(q => q.CalismaSaatleri, "Çalışma Saatleri")
                    @Html.TextBoxFor(q => q.CalismaSaatleri, new { @class = "form-control form-control-border border-width-2", @placeholder = "Çalışma Saatleri Giriniz", @id = "calismasaatleri" })
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-lg-4">
                    @Html.LabelFor(q => q.Aylik_Abonelik_Ucreti, "Aylık Abonelik Ücreti")
                    @Html.TextBoxFor(q => q.Aylik_Abonelik_Ucreti, new { @class = "form-control form-control-border border-width-2", @placeholder = "Aylık Abonelık Ücreti Giriniz", @id = "AylikAbonelikUcreti" })
                </div>
                <div class="form-group col-lg-4">
                    @Html.LabelFor(q => q.Ucretsiz_Parklanma_Suresi_dakika, "Ücretsiz Parklanma Süresi (dakika)")
                    @Html.TextBoxFor(q => q.Ucretsiz_Parklanma_Suresi_dakika, new { @class = "form-control form-control-border border-width-2", @placeholder = "Ücretsiz Parklanma Süresi (dakika) Giriniz", @id = "Ucretsiz_Parklanma_Suresi_dakika" })
                </div>

                <div class="form-group col-lg-4">
                    @Html.LabelFor(q => q.Tarifesi, "Tarife")
                    @Html.TextBoxFor(q => q.Tarifesi, new { @class = "form-control form-control-border border-width-2", @placeholder = "Tarife Giriniz", @id = "Tarifesi" })
                </div>
            </div>

        </div>
        @Html.HiddenFor(q => q._id)
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>

